{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "ES2023",
      "sourceMap": false,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*.ts"  // Includes all TypeScript files in the src directory
    ],
    "exclude": [
      "node_modules"  // Excludes the node_modules directory
    ]
  }